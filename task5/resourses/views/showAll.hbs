{{>header}}
{{>nav}}
<section class="my-5 container">
    <div class="row mb-3 justifiy-content-end">
        <a href="/add" class="btn btn-primary col-2">Add New Customer</a>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>intialBalance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each customers}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.intialBalance}}</td>
                <td>
                    <a href="/show/{{this._id}}" class="btn btn-primary mx-2">Show</a>
                    <a href="/addop/{{this.accNum}}" class="btn btn-warning mx-2">addOp</a>
                </td>
            </tr>
            {{/each}}
            {{#if isEmpty}}
            <tr class="alert alert-danger">
                <td colspan="3" class="text-center">No Customer yet</td>
            </tr>
            {{/if}}
        </tbody>
    </table>
</section>
{{>footer}}